{% extends 'layout.njk' %}

{% block content %}
    <h1>Private Classes</h1>
    <div class="card table-container">

        <header>
            <a class='edit' href="/teachers/create">New</a>
            <form action="/teachers" method="get">
                <input type="text" name="filter" id="" placeholder='Name or Subject' value={{filter}}>
                <button type="submit">Filter</button>
            </form>

        </header>

        <table width='100%'>
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Subjects</th>
                    <th>Students</th>
                    <th>Action</th>
                </tr>

            </thead>

            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style='background-image: url({{teacher.avatar_url}})'></span>

                            {{teacher.name}}</td>

                        <td>
                            <span>{{teacher.services}}</span>
                        </td>
                        <td>{{teacher.total_students}}</td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">See</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>
    </div>
{% endblock %}