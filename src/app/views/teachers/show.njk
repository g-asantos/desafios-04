{% extends 'layout.njk' %}

{% block content %}
    <h1>Private Classes</h1>
    <div class="card">
        <section class="avatar" style='border-radius: 15px; background: url({{teacher.avatar_url}}) no-repeat center center / cover'></section>
        <section class="details">

            <div class="item">
                <div>Name</div>
                <div>{{teacher.name}}</div>
            </div>
            
            <div class="item">
                <div>Age</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Education Level</div>
                <div>{{teacher.school}}</div>
            </div>

            <div class="item">
                <div>Type of Course</div>
                <div>{{teacher.classtype}}</div>
            </div>

            <div class="item">
                <div>Services</div>
                {% for service in teacher.services %}
                <div>{{service}}</div>
                {% endfor %}
            </div>

            <div class="item">
                <div>Since</div>
                <div>{{teacher.created_at}}</div>
            </div>

        <a href="/teachers/{{teacher.id}}/edit" class='edit'>Editar</a>
        </section>
    </div>
{% endblock %}