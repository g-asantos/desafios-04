            {%import 'parts/messages.njk' as messages%}
            <div class="item">
                <div>Avatar URL</div>
                <div><input type="url" name="avatar_url" placeholder='http://' value='{{student.avatar_url}}'></div>
            </div>

            <div class="item">
                <div>Name</div>
                <div><input type="text" name="name" placeholder='João' value='{{student.name}}'></div>
            </div>

            <div class="item">
                <div>Birth date</div>
                <div><input type="date" name="birth" value='{{student.birth}}'></div>
            </div>

            <div class="item">
                <div>Email</div>
                <div><input type="email" name="email" value='{{student.email}}'></div>
            </div>


            <div class="item">
                <div>School Year</div>
                <div>
                    <select name="schoolyear">
                        <option value="5EF" {% if student.schoolyear == "5EF"  %}
          selected
          {% endif %}>5º ano do Ensino Fundamental</option>
                        <option value="6EF" {% if student.schoolyear == "6EF"  %}
          selected
          {% endif %}>6º ano do Ensino Fundamental</option>
                        <option value="7EF" {% if student.schoolyear == "7EF"  %}
          selected
          {% endif %}>7º ano do Ensino Fundamental</option>
                        <option value="8EF" {% if student.schoolyear == "8EF"  %}
          selected
          {% endif %}>8º ano do Ensino Fundamental</option>
                        <option value="9EF" {% if student.schoolyear == "9EF"  %}
          selected
          {% endif %}>9º ano do Ensino Fundamental</option>
                        <option value="1EM" {% if student.schoolyear == "1EM"  %}
          selected
          {% endif %}>1º ano do Ensino Médio</option>
                        <option value="2EM" {% if student.schoolyear == "2EM"  %}
          selected
          {% endif %}>2º ano do Ensino Médio</option>
                        <option value="3EM" {% if student.schoolyear == "3EM"  %}
          selected
          {% endif %}>3º ano do Ensino Médio</option>
                    </select>

                </div>
            </div>
            <div class="item">
                <div>Weekly Workload</div>
                <div><input type="number" name="workload" value='{{student.workload}}'></div>
            </div>
            

            <div class="item">
                <div>Teacher</div>
                <div>
                    
                    <select name="teacher">
                    {% for teacher in teacherOptions%}
                        <option value="{{teacher.id}}" {% if student.teacher_id == teacher.id  %}
          selected
          {% endif %}>{{teacher.name}}</option>
                    {%endfor%}   
                    </select>


            <button type="submit" onclick='Validate.allFields(event)'>Salvar</button>